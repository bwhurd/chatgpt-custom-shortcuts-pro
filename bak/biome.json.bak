{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "formatter": { "enabled": true },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnreachable": "warn"
      },
      "suspicious": {
        "useIterableCallbackReturn": "warn",
        "noAssignInExpressions": "warn"
      }
    }
  },
  "javascript": {
    "globals": ["chrome", "gsap", "ScrollToPlugin", "Observer", "Flip"]
  }
}
