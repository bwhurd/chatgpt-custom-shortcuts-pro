{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"root": true,
	"files": {
		"includes": [
			"**",
			"!lib",
			"!node_modules",
			"!dist",
			"!build",
			"!**/*.min.js"
		],
		"ignoreUnknown": true
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"recommended": true,
				"noUnreachable": "error",
				"noUnusedImports": "error"
			},
			"suspicious": {
				"recommended": true,
				"noVar": "error",
				"noAssignInExpressions": "error",
				"useIterableCallbackReturn": "error",
				"noPrototypeBuiltins": "error"
			},
			"style": {
				"recommended": true,
				"useConst": "error",
				"useTemplate": "warn",
				"noUselessElse": "warn",
				"noParameterAssign": "warn"
			},
			"complexity": {
				"recommended": true,
				"noExcessiveLinesPerFunction": "off"
			},
			"performance": {
				"useTopLevelRegex": "off"
			},
			"security": "warn",
			"nursery": {
				"recommended": true
			}
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"recommended": true
			}
		}
	},
	"javascript": {
		"globals": [
			"chrome",
			"gsap",
			"ScrollToPlugin",
			"Observer",
			"Flip"
		],
		"formatter": {
			"semicolons": "always",
			"trailingCommas": "all",
			"quoteStyle": "single",
			"jsxQuoteStyle": "double"
		}
	},
	"vcs": {
		"enabled": false
	}
}