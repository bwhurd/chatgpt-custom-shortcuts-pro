{
  "manifest_version": 3,
  "name": "__MSG_app_name__",
  "default_locale": "en",
  "description": "__MSG_app_description__",
  "version": "4.1.1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "optional_permissions": [
    "identity"
  ],
  "optional_host_permissions": [
    "https://www.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "327917786122-srco2sph3rslc8hdca4no5cmfhdgooen.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive.appdata"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.chatgpt.com/*"
      ],
      "js": [
        "lib/gsap.min.js",
        "lib/ScrollToPlugin.min.js",
        "lib/Observer.min.js",
        "lib/Flip.min.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+U"
      },
      "description": "Show the popup"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' data:;"
  }
}