{
	"manifest_version": 3,
	"name": "__MSG_app_name__",
	"default_locale": "en",
	"description": "__MSG_app_description__",
	"version": "4.0.1.1",
	"permissions": [
		"storage"
	],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icon16.png",
			"32": "icon32.png",
			"48": "icon48.png",
			"128": "icon128.png"
		}
	},
	"icons": {
		"16": "icon16.png",
		"32": "icon32.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"content_scripts": [
		{
			"matches": [
				"*://*.chatgpt.com/*"
			],
			"js": [
				"lib/gsap.min.js",
				"lib/ScrollToPlugin.min.js",
				"lib/Observer.min.js",
				"lib/Flip.min.js",
				"content.js"
			],
			"run_at": "document_idle"
		}
	],
	"commands": {
		"_execute_action": {
			"suggested_key": {
				"default": "Alt+U"
			},
			"description": "Show the popup"
		}
	}
}